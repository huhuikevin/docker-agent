{
	"repository_base":"registry-vpc.cn-hongkong.aliyuncs.com/lovanow_beta",
	"docker_engine_port":2222,
	"zookeeper":[
		{
			"repo_name":"zookeeper",
			"tag":"v1",
			"dockerName":"zk-cluster.0",
			"hosts":["172.16.0.200"],
			"networkMode": "host",
			"volume":["/data/server/zookeeper:/data"],
			"run_cmd":"/start.sh",
        	"ulimits": [
    			{"name": "nofile","softLimit": 10000, "hardLimit": 12000}
    		],
    		"addhost": [
    			"zkserver1:172.16.0.200",
    			"zkserver2:172.16.0.201",
    			"zkserver3:172.16.0.202"
    		],
    		"ext_env":[
    			"ZOO_LOG_DIR=/data/server",
    			"myid=0",
    			"zkip=172.16.0.200"
    		]
		},
