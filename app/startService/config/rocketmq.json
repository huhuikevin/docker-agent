{
	"repository_base":"registry-vpc.cn-hongkong.aliyuncs.com/lovanow_beta",
	"docker_engine_port":2222,
	"rocketmq":[
		{
			"repo_name":"rocketmq",
			"tag":"v2",
			"dockerName":"mq-namesrv",
			"hosts":["172.16.0.200","172.16.0.201"],
			"networkMode": "host",
			"volume":["/data/server/rocketmq:/data"],
			"run_cmd":"/start.sh",
        	"ulimits": [
    			{"name": "nofile","softLimit": 5000, "hardLimit": 6000}
    		],
    		"ext_env":[
    			"role=namesrv"
    		]
		},
		{
			"repo_name":"rocketmq",
			"tag":"v2",
			"dockerName":"mq-broker",
			"hosts":["172.16.0.200"],
			"networkMode": "host",
			"volume":["/data/server/rocketmq:/data"],
			"run_cmd":"/start.sh",
        	"ulimits": [
    			{"name": "nofile","softLimit": 5000, "hardLimit": 6000}
    		],
    		"ext_env":[
                "role=master_noslave",
                "cname=lovanow_beta",
                "brokerName=broker-a",
 			    "brokerip=172.16.0.200",
                "namesrvAddr=\"172.16.0.201:9876;172.16.0.200:9876\""
    		]
		},
        {
            "repo_name":"rocketmq",
            "tag":"v2",
            "dockerName":"mq-broker",
            "hosts":["172.16.0.201"],
            "networkMode": "host",
            "volume":["/data/server/rocketmq:/data"],
            "run_cmd":"/start.sh",
            "ulimits": [
                {"name": "nofile","softLimit": 5000, "hardLimit": 6000}
            ],
            "ext_env":[
                "role=master_noslave",
                "cname=lovanow_beta",
                "brokerName=broker-b",
                "brokerip=172.16.0.201",
                "namesrvAddr=\"172.16.0.201:9876;172.16.0.200:9876\""
            ]
        }
	]
}
